<div class="row justify-content-md-center">
  <h1>新規投稿</h1>
</div>

<div class="container">
  <%= form_with model: @post, url: posts_path do |f| %>
    <%= f.label "タイトル名" %>
    <%= f.text_field :title %>

    <%= f.label "写真・画像を選択" %>
    <%= f.file_field :image, accept: "image/*" %>　<%#= 写真画像を4枚まで選択させるようにしたい  %>

    <%= f.label "説明を入力" %>
    <%= f.text_area :explanation, rows: "10" %>


    <%#= f.select :prefecture_id, Post.prefecture_ids.keys, {prompt: '選択してください'} %> <%#配列を入れる※複数形で記述 　今回はモデルでenumを定義しているカラム名を入れる　%>

    <%= f.label :address, class: "form-label fw-bold"%>
    <%= f.text_field :address, autofocus: true,placeholder: "住所を入力してください", class: "form-control" %>
    <%#= f.submit (@post.new_record? ? "投稿する" : "更新する"), class: "btn btn-primary mb-4" %>

    <div class='form-group'>
      <%= f.label "地名タグを選択" %>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
    </div>

    <%= f.submit '投稿' %>
  <% end %>
</div>
