<div class="row justify-content-md-center">
  <h2>検索結果 "<%= @keyword %>"</h2>
</div>

<div class="container">
  <% @posts.each do |post| %>
    <%= link_to post_path(post.id) do %>
      <%= post.title %>
      <%= post.user.name %>
      <%= post.prefecture_id %>
      <%= post.likes.count %>
      <%= image_tag post.user.image, size: "200x200" %>
    <% end %>
  <% end %>
</div>