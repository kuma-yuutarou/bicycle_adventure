<h1>マイページ編集</h1>

<%= form_with model: @users, url: user_path do |f| %>

  <h4>名前</h4>
  <%= f.text_field :name %>

  <h4>年齢</h4>
  <%= f.text_field :age %>

  <h4>性別</h4>
  <%= f.text_field :gender %>

  <h4>自己紹介</h4>
  <%= f.text_field :introduction %>

  <h4>アイコン画像</h4>
  <%= f.text_field :image, accept: "image/*" %>

  <h4>メールアドレス</h4>
  <%= f.email_field :email %>
  
  <h4>電話番号（ハイフン無し）</h4>
  <%= f.email_field :telephone_number %>

  <%= f.submit '保存' %>
  
<% end %>